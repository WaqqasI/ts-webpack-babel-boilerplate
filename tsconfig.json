{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "noUnusedLocals": true,
    "noImplicitAny": true,
    "target": "es2015",
    "module": "es2015",
    "sourceMap": true,
    "strict": true,
    "jsx": "react",
    "allowJs": true,
    "checkJs": true,
    "baseUrl": "src",
    "paths": {
      "assets/*": ["assets/*"],
      "logger": ["util/logger"]
    }
  },
  "include": [
    "src/**/*",
    "custom.d.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}